@model IEnumerable<StudentManagement.Models.Course>

<style>
    .profile-card {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
        border-radius: 12px;
        overflow: hidden;
    }

        .profile-card h3 {
            font-weight: bold;
            letter-spacing: 1px;
        }

    .custom-table thead {
        background-color: #343a40;
        color: #fff;
    }

    .custom-table tbody tr:hover {
        background-color: #e0f7fa;
        transition: 0.3s;
    }

    .btn-custom {
        border-radius: 25px;
        padding: 10px 20px;
        font-size: 16px;
        transition: 0.3s;
    }

        .btn-custom:hover {
            transform: scale(1.05);
            opacity: 0.9;
        }
</style>

<div class="container mt-5">
    <div class="card shadow-lg profile-card">
        <div class="card-header text-white text-center" style="background: rgba(0,0,0,0.3);">
            <h3>📚 المواد المسجلة</h3>
        </div>
        <div class="card-body bg-white">
            @if (Model != null && Model.Any())
            {
                <table class="table table-bordered table-hover custom-table text-center">
                    <thead>
                        <tr>
                            <th>📖 اسم المادة</th>
                            <th>⏳ عدد الساعات</th>
                            <th>🏫 الشعبة</th>
                            <th>🕒 الوقت</th>
                            <th>الإجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.Title</td>
                                <td>@course.Credits</td>
                                <td>@course.SectionNumber</td>
                                <td>@course.Schedule</td>
                                <td>
                                    <form asp-action="Unregister" method="post" onsubmit="return confirm('هل أنت متأكد من حذف هذه المادة؟');">
                                        <input type="hidden" name="id" value="@course.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            ❌ حذف
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-danger text-center">لم تقم بتسجيل أي مواد بعد.</p>
            }

            <div class="text-center mt-4">
                <a href="/Courses/Index" class="btn btn-success btn-custom mx-2">
                    ➕ تسجيل مادة جديدة
                </a>
                <a href="/Students/Profile" class="btn btn-secondary btn-custom mx-2">
                    ⬅ العودة للملف الشخصي
                </a>
            </div>
        </div>
    </div>
</div>

